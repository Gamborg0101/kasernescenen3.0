generator client {
  provider = "prisma-client-js"
  output   = "../app/generated/prisma"
}

datasource db {
  provider = "postgresql"
}

model User {
  id       Int       @id @default(autoincrement())
  name     String
  email    String    @unique
  password String
  note     String?
  category String?
  room     Room?     @relation(fields: [roomId], references: [id])
  roomId   Int?
  bookings Booking[]
}

model Room {
  id       Int       @id @default(autoincrement())
  name     String    @unique
  capacity Int
  location String
  users    User[]
  bookings Booking[]
}

model Booking {
  id        Int      @id @default(autoincrement())
  bookingId String   @unique
  userId    Int
  roomId    Int
  startTime DateTime
  endTime   DateTime

  user User @relation(fields: [userId], references: [id])
  room Room @relation(fields: [roomId], references: [id])
}

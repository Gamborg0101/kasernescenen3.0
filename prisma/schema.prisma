generator client {
  provider = "prisma-client-js"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
}

model User {
  id            Int       @id @default(autoincrement())
  firstName     String
  lastName      String
  phone         Int       @unique
  email         String    @unique
  studentNumber Int       @unique
  cardNumber    Int       @unique
  note          String?
  category      String?
  password      String
  roomId        Int?  
  bookings      Booking[]
  room          Room?     @relation(fields: [roomId], references: [id])
}

model Room {
  id       Int       @id @default(autoincrement())
  name     String    @unique
  capacity Int
  location String
  bookings Booking[]
  users    User[]
}

model Booking {
  id        Int      @id @default(autoincrement())
  bookingId String   @unique
  userId    Int
  roomId    Int
  startTime DateTime
  endTime   DateTime
  room      Room     @relation(fields: [roomId], references: [id])
  user      User     @relation(fields: [userId], references: [id])
}
